{
  "extends": "@vue/tsconfig/tsconfig.web.json",
  "include": [
    "env.d.ts",
    "src/**/*",
    "src/**/*.vue",
    "./storybook/*"
  ],
  "compilerOptions": {
    "baseUrl": ".",
    "allowJs": true,
    "typeRoots": [
      "types",
      "./node_modules/@types"
    ],
    "types": [
      "vite/client"
    ],
    "paths": {
      "@/*": [
        "./src/*"
      ],
      "~/*": [
        "./src/*"
      ]
    }
  }
}